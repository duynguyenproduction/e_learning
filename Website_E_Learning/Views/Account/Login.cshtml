@model Website_E_Learning.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="content">
                <div class="page-title">Log In</div>
                <div class="content-area">
                    <main class="site-main">
                        <section id="loginForm">
                            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                            {
                                @Html.AntiForgeryToken()
                                <fieldset>
                                    <table>
                                        <tr>
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Email", @required = "true", @autofocus="true"})
                                        </tr>
                                        <tr>
                                            @Html.PasswordFor(m => m.Password, new { @type = "password", @class = "form-control", @placeholder = "Password", @required = "true" })
                                        </tr>
                                        <tr>
                                            <content>
                                                <label class="checkbox pull-left">
                                                    @Html.CheckBoxFor(m => m.RememberMe)
                                                    Remember me
                                                </label>
                                            </content>
                                        </tr>
                                        <tr>
                                            <content>
                                                <button class="btn btn-lg btn-primary btn-block" type="submit">
                                                    Sign in
                                                </button>
                                            </content>
                                        </tr>
                                    </table>
                                </fieldset>
                                <p>
                                    @Html.ValidationSummary(true,"", new { @style="color: red;" })
                                </p>
                                <p>
                                    @Html.ActionLink("Register", "Register") if you don't have an account.
                                </p>
                            }
                        </section>
                    </main>
                </div>
            </div>
        </div>
    </div>
</div>
        
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
